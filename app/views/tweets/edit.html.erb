<div class="edittweet">
    <%= form_for @tweet do |f| %>
      <div class="form-group">
        <%= f.label :content %><br/>
        <%= f.text_area :content, class: 'form-control', rows: 3 %>
      </div>
      <div class="actions clearfix">
          <div class="alert">
              <% if flash[:alert] %>
                  <% flash[:alert].each do |message| %>
                  <p class="alert"><%= message %></p>
                  <% end %>
              <% end %>      
          </div>
        <div class="edit">
          <%= f.submit '投稿', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>